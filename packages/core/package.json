		"@types/lodash": "^4.14.185",
		"@types/shelljs": "^0.8.11",
		"rimraf": "3.0.2",
		"rollup": "^2.77.2",
		"rollup-plugin-terser": "^7.0.2",
		"shelljs": "^0.8.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.3"
	},
	"dependencies": {
		"fs-extra": "^10.1.0",
		"lodash": "^4.17.21"
